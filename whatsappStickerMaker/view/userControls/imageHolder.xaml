<UserControl x:Class="whatsappStickerMaker.view.userControls.imageHolder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:whatsappStickerMaker.view.userControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Rectangle StrokeDashArray="1.0 1.0"
                   x:Name="imageHolderRect"
                   Stroke="Black"  
                   StrokeThickness="2"
                   Fill="Transparent"
                   Margin="12.5" MouseLeftButtonDown="Rectangle_MouseLeftButtonDown">
        </Rectangle>
        <Image x:Name="imagePlaceholder" Margin="12.5" Stretch="Uniform" 
               MouseLeftButtonDown="Rectangle_MouseLeftButtonDown"></Image>
    </Grid>
</UserControl>