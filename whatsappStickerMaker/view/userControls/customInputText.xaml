<UserControl x:Class="whatsappStickerMaker.view.userControls.customInputText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:whatsappStickerMaker.view.userControls"
             mc:Ignorable="d" 
             d:DesignHeight="75" d:DesignWidth="150">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>
        <Label x:Name="lblInput"  Foreground="Black" Grid.Row="0" Content="{Binding CustomLabel}" 
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20"></Label>
        <TextBox x:Name="txtInput" Grid.Row="1" BorderBrush="Black" FontSize="20"
                 VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                 ></TextBox>
    </Grid>
</UserControl>     
