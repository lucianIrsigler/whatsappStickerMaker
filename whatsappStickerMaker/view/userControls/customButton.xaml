<UserControl x:Class="whatsappStickerMaker.view.userControls.customButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:whatsappStickerMaker.view.userControls"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="100">
    <Grid>
        <Border BorderBrush="LightBlue" BorderThickness="1" CornerRadius="3">
            <Button x:Name="button" BorderThickness="0" Background="LightBlue" Click="Button_Click"/>
        </Border>
        <Label Content="{Binding CustomText}" x:Name="lblButton"
               VerticalAlignment="Center" HorizontalAlignment="Center"
               FontSize="{Binding CustomFontSize}"
               />
    </Grid>
</UserControl>
